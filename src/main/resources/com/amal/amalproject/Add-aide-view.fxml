<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20; -fx-background-color: #6c757d;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amal.amalproject.controllers.AddAideController">
   <children>
      <Label contentDisplay="CENTER" text="Sujet" textAlignment="CENTER" textFill="#e9ebee">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="pubSujet" prefHeight="25.0" prefWidth="667.0" />
      <Label text="Texte Publication" textFill="#f8f8f8">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="pubContenue" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="addAide" mnemonicParsing="false" onAction="#onAddAideClick" style="-fx-background-color: #28a745; -fx-border-radius: 6px;;" text="Ajouter" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Button fx:id="vider" mnemonicParsing="false" onAction="#vider" prefHeight="51.0" prefWidth="110.0" style="-fx-background-color: #dc3545; -fx-border-radius: 6px;" text="Vider" textFill="#f8f7f7">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
   <opaqueInsets>
      <Insets top="21.0" />
   </opaqueInsets>
</VBox>
